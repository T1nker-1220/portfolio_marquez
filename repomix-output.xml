      {/* Horizontal Timeline Container */}
      <div className="relative">
        {/* Progress Line */}
        <div className="absolute top-12 left-0 right-0 h-1 bg-border/50 rounded-full overflow-hidden">
          <motion.div
            initial={{ width: "0%" }}
            animate={{ width: "100%" }}
